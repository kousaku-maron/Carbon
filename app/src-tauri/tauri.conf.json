{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "carbon",
  "version": "0.1.0",
  "identifier": "dev.maron.carbon",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Carbon",
        "width": 1200,
        "height": 820,
        "resizable": true,
        "dragDropEnabled": false
      }
    ]
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
