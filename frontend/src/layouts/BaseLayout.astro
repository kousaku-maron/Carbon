---
import '../styles/global.css';
import { ClientRouter } from 'astro:transitions';
import { SidebarTree } from '../components/SidebarTree';
import { getSidebarTree } from '../lib/server/api';

const { title = 'Vessel Markdown Manager', authPage = false } = Astro.props;
const user = Astro.locals.user;
const userNavLabel = user ? 'Account' : 'Login';
const userNavHref = user ? '/me' : '/login';

const currentUrl = new URL(Astro.request.url);
const currentPath = currentUrl.pathname;
const isUserNavActive = currentPath === '/me' || currentPath === '/login';
const sidebarTree = !authPage && user ? await getSidebarTree(Astro.locals.db, user.id) : null;
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <ClientRouter />
    <style is:global>
      /* ── Design Tokens (Notion-inspired) ── */
      :root {
        --bg: #ffffff;
        --bg-subtle: #f7f7f5;
        --bg-sidebar: #fbfbfa;
        --paper: #ffffff;
        --text: #37352f;
        --text-secondary: #57534e;
        --muted: #9b9a97;
        --line: #e9e9e7;
        --line-light: #f1f1ef;
        --line-dotted: #e3e2e0;
        --accent: #2383e2;
        --accent-hover: #1b6ec2;
        --accent-light: rgba(35, 131, 226, 0.08);
        --accent-lighter: rgba(35, 131, 226, 0.04);
        --danger: #eb5757;
        --danger-hover: #d44444;
        --success: #0f7b6c;
        --radius: 8px;
        --radius-sm: 6px;
        --radius-lg: 12px;
        --shadow-sm: 0 1px 2px rgba(0, 0, 0, 0.04);
        --shadow: 0 1px 3px rgba(0, 0, 0, 0.06), 0 1px 2px rgba(0, 0, 0, 0.04);
        --shadow-md: 0 4px 12px rgba(0, 0, 0, 0.08), 0 1px 3px rgba(0, 0, 0, 0.04);
        --shadow-lg: 0 8px 24px rgba(0, 0, 0, 0.12);
        --transition: 150ms ease;
        --transition-slow: 250ms ease;
      }

      /* ── Reset & Base ── */
      *, *::before, *::after { box-sizing: border-box; }

      body {
        margin: 0;
        color: var(--text);
        background: var(--bg);
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", "Hiragino Sans", "Hiragino Kaku Gothic ProN", "Noto Sans JP", sans-serif;
        font-size: 15px;
        line-height: 1.7;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
      }

      /* ── Typography ── */
      h1, h2, h3 {
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", "Hiragino Sans", "Hiragino Kaku Gothic ProN", "Noto Sans JP", sans-serif;
        font-weight: 700;
        line-height: 1.3;
        letter-spacing: -0.02em;
        color: var(--text);
      }
      h1 { margin: 0 0 8px; font-size: 1.875rem; }
      h2 { margin: 0 0 4px; font-size: 1.25rem; }
      p { line-height: 1.7; margin: 0 0 4px; }

      a {
        color: inherit;
        text-decoration: none;
        transition: color var(--transition);
      }

      .brand {
        font-weight: 600;
        font-size: 0.875rem;
        letter-spacing: -0.01em;
        color: var(--text);
        display: flex;
        align-items: center;
        gap: 8px;
        padding: 4px 8px;
        border-radius: var(--radius-sm);
        transition: background var(--transition);
      }
      .brand-icon {
        width: 22px;
        height: 22px;
        background: var(--text);
        border-radius: 4px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 12px;
        font-weight: 800;
        font-family: "SF Mono", SFMono-Regular, Menlo, monospace;
      }
      .brand:hover { background: var(--bg-subtle); }

      .sidebar-toggle {
        display: none;
        align-items: center;
        justify-content: center;
        width: 28px;
        height: 28px;
        position: fixed;
        top: 12px;
        left: 12px;
        z-index: 41;
        border-radius: var(--radius-sm);
        border: 1px solid var(--line-light);
        background: var(--paper);
        box-shadow: var(--shadow-sm);
        color: var(--muted);
        cursor: pointer;
        padding: 0;
      }
      .sidebar-toggle:hover {
        background: var(--bg-subtle);
        color: var(--text);
      }
      .sidebar-toggle svg {
        width: 18px;
        height: 18px;
      }

      /* ── Main content ── */
      .app-shell {
        display: grid;
        grid-template-columns: 260px minmax(0, 1fr);
        min-height: 100vh;
      }

      .sidebar {
        border-right: 1px solid var(--line-light);
        background: var(--bg-sidebar);
        min-width: 0;
        position: sticky;
        top: 0;
        height: 100vh;
        overflow: hidden;
        display: flex;
        flex-direction: column;
        transition: transform var(--transition-slow);
      }

      .sidebar-inner {
        min-height: 0;
        flex: 1;
        overflow-y: auto;
        overflow-x: hidden;
        padding: 10px 8px;
        display: flex;
        flex-direction: column;
      }

      .sidebar-brand {
        padding: 0 4px 8px;
      }

      .sidebar-bottom {
        border-top: 1px solid var(--line-light);
        padding: 8px;
      }

      .sidebar-account-link {
        display: flex;
        align-items: center;
        min-height: 30px;
        padding: 0 8px;
        border-radius: var(--radius-sm);
        font-size: 0.8125rem;
        font-weight: 500;
        color: var(--muted);
        transition: color var(--transition), background var(--transition);
      }

      .sidebar-account-link:hover {
        color: var(--text);
        background: rgba(55, 53, 47, 0.04);
      }

      .sidebar-account-link.active {
        color: var(--text);
        background: rgba(55, 53, 47, 0.08);
      }

      .sidebar-tree {
        display: flex;
        flex-direction: column;
        gap: 8px;
        flex: 1;
        min-height: 0;
      }

      .sidebar-tree-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 0 4px;
      }

      .sidebar-tree-title {
        font-size: 0.6875rem;
        font-weight: 600;
        color: var(--muted);
        letter-spacing: 0.04em;
        text-transform: uppercase;
      }

      .sidebar-toolbar {
        display: flex;
        gap: 2px;
      }

      .sidebar-action-btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 4px;
        border-radius: var(--radius-sm);
        border: none;
        background: transparent;
        color: var(--muted);
        padding: 4px 8px;
        font-size: 0.6875rem;
        font-weight: 600;
        line-height: 1;
        cursor: pointer;
        transition: background var(--transition), color var(--transition);
      }

      .sidebar-action-btn:hover {
        background: rgba(55, 53, 47, 0.08);
        color: var(--text);
      }

      .sidebar-action-btn:disabled {
        opacity: 0.5;
        cursor: not-allowed;
      }

      .sidebar-empty {
        font-size: 0.8125rem;
        color: var(--muted);
        margin: 8px 0 0;
        padding: 0 4px;
      }

      .sidebar-tree-list {
        list-style: none;
        padding: 0;
        margin: 0;
      }

      .sidebar-tree-item {
        margin: 0;
      }

      .sidebar-tree-row {
        min-height: 28px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        border-radius: var(--radius-sm);
        color: var(--text-secondary);
        font-size: 0.8125rem;
        transition: background 60ms ease;
      }

      .sidebar-tree-row.note {
        text-decoration: none;
        padding-right: 4px;
      }

      .sidebar-tree-row.note:hover,
      .sidebar-tree-row.folder:hover {
        background: rgba(55, 53, 47, 0.04);
        color: var(--text);
      }

      .sidebar-tree-row.note.active {
        background: rgba(55, 53, 47, 0.08);
        color: var(--text);
        font-weight: 500;
      }

      /* Hover to show actions (Notion-style) */
      .sidebar-tree-actions {
        display: inline-flex;
        gap: 2px;
        padding-right: 4px;
        opacity: 0;
        transition: opacity var(--transition);
      }
      .sidebar-tree-row:hover .sidebar-tree-actions {
        opacity: 1;
      }

      .sidebar-tree-label {
        display: inline-flex;
        align-items: center;
        gap: 5px;
        min-width: 0;
      }

      .sidebar-folder-link {
        all: unset;
        box-sizing: border-box;
        flex: 1;
        min-width: 0;
        min-height: 28px;
        width: 100%;
        display: inline-flex;
        align-items: center;
        justify-content: flex-start;
        border: none;
        padding: 0;
        background: transparent;
        text-align: left;
        font: inherit;
        line-height: inherit;
        color: inherit;
        cursor: pointer;
      }

      .sidebar-folder-link[type="button"] {
        border: none;
        background: transparent;
        box-shadow: none;
      }

      .sidebar-folder-link[type="button"]:hover:not(:disabled) {
        border: none;
        background: transparent;
        color: inherit;
      }

      .sidebar-tree-label > span:last-child {
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
      }

      .sidebar-folder-glyph {
        color: var(--muted);
        width: 12px;
        height: 12px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        flex: none;
        transition: transform var(--transition);
      }

      .sidebar-folder-glyph svg {
        width: 12px;
        height: 12px;
        stroke: currentColor;
        stroke-width: 1.8;
        stroke-linecap: round;
        stroke-linejoin: round;
      }

      .sidebar-folder-glyph.expanded {
        transform: rotate(90deg);
      }

      .sidebar-mini-action {
        border: none;
        background: transparent;
        color: var(--muted);
        border-radius: var(--radius-sm);
        height: 20px;
        min-width: 20px;
        padding: 0 2px;
        font-size: 0.625rem;
        font-weight: 700;
        line-height: 1;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: background var(--transition), color var(--transition);
      }

      .sidebar-mini-action:hover {
        background: rgba(55, 53, 47, 0.08);
        color: var(--text);
      }

      .sidebar-mini-action:disabled {
        opacity: 0.5;
        cursor: not-allowed;
      }

      .sidebar-inline-input {
        width: 100%;
        border: 1px solid var(--accent);
        border-radius: var(--radius-sm);
        background: var(--paper);
        padding: 2px 8px;
        font-size: 0.8125rem;
        color: var(--text);
        outline: none;
        box-shadow: 0 0 0 2px rgba(35, 131, 226, 0.15);
        min-height: 26px;
      }
      .sidebar-inline-input::placeholder {
        color: var(--muted);
      }

      .sidebar-context-menu {
        position: fixed;
        z-index: 1200;
        min-width: 150px;
        border: 1px solid var(--line);
        border-radius: var(--radius-sm);
        background: var(--paper);
        box-shadow: var(--shadow-md);
        padding: 4px;
        display: grid;
        gap: 2px;
      }

      .sidebar-context-menu-item {
        all: unset;
        box-sizing: border-box;
        min-height: 30px;
        border-radius: calc(var(--radius-sm) - 2px);
        padding: 0 10px;
        font-size: 0.8125rem;
        color: var(--text);
        display: flex;
        align-items: center;
        cursor: pointer;
        transition: background var(--transition), color var(--transition);
      }

      .sidebar-context-menu-item:hover {
        background: rgba(55, 53, 47, 0.08);
      }

      .sidebar-context-menu-item:disabled {
        opacity: 0.5;
        cursor: not-allowed;
      }

      .sidebar-login {
        font-size: 0.8125rem;
        color: var(--muted);
        padding: 0 4px;
      }

      .sidebar-login a {
        color: var(--text);
        text-decoration: underline;
      }

      .wrap {
        max-width: 900px;
        margin: 0 auto;
        padding: 32px 48px 48px;
        width: 100%;
        min-width: 0;
      }

      /* ── Footer ── */
      .site-footer {
        border-top: 1px solid var(--line);
        padding: 32px 24px;
        text-align: center;
        color: var(--muted);
        font-size: 0.8rem;
        background: var(--paper);
      }

      /* ── Card ── */
      .card {
        background: var(--paper);
        border: 1px solid var(--line);
        border-radius: var(--radius);
        padding: 24px;
        box-shadow: var(--shadow-sm);
        transition: box-shadow var(--transition-slow), transform var(--transition-slow), border-color var(--transition);
      }
      .card-interactive {
        cursor: pointer;
      }
      .card-interactive:hover {
        box-shadow: var(--shadow-md);
        transform: translateY(-1px);
        border-color: var(--line-dotted);
      }

      /* ── Buttons ── */
      button, .btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 6px;
        border: none;
        border-radius: var(--radius-sm);
        padding: 6px 14px;
        font-size: 0.8125rem;
        font-weight: 500;
        font-family: inherit;
        cursor: pointer;
        transition: background var(--transition), transform 80ms ease, box-shadow var(--transition), opacity var(--transition);
        line-height: 1.4;
      }
      button:active, .btn:active { transform: scale(0.98); }
      button:disabled, .btn:disabled {
        opacity: 0.5;
        cursor: not-allowed;
        transform: none;
      }

      .btn-primary, button[type="submit"] {
        background: var(--accent);
        color: white;
      }
      .btn-primary:hover, button[type="submit"]:hover:not(:disabled) {
        background: var(--accent-hover);
      }

      .btn-secondary, button[type="button"] {
        background: var(--paper);
        color: var(--text-secondary);
        border: 1px solid var(--line);
      }
      .btn-secondary:hover, button[type="button"]:hover:not(:disabled) {
        background: var(--bg-subtle);
        color: var(--text);
        border-color: var(--line-dotted);
      }

      .btn-danger {
        background: var(--danger);
        color: white;
        border: none;
      }
      .btn-danger:hover:not(:disabled) {
        background: var(--danger-hover);
      }

      /* ── Forms ── */
      .form-group {
        display: grid;
        gap: 6px;
      }

      .form-label {
        font-size: 0.8125rem;
        font-weight: 500;
        color: var(--text-secondary);
      }

      input, textarea {
        width: 100%;
        border: 1px solid var(--line);
        border-radius: var(--radius-sm);
        background: var(--paper);
        padding: 8px 12px;
        font: inherit;
        font-size: 0.9375rem;
        color: var(--text);
        transition: border-color var(--transition), box-shadow var(--transition);
        outline: none;
      }
      input:hover, textarea:hover {
        border-color: var(--line-dotted);
      }
      input:focus, textarea:focus {
        border-color: var(--accent);
        box-shadow: 0 0 0 2px rgba(35, 131, 226, 0.12);
      }
      input::placeholder, textarea::placeholder {
        color: var(--muted);
      }
      textarea { min-height: 220px; resize: vertical; }

      .tiptap-shell {
        width: 100%;
        border: 1px solid var(--line);
        border-radius: var(--radius-sm);
        background: var(--paper);
        transition: border-color var(--transition), box-shadow var(--transition);
      }
      .tiptap-shell:hover {
        border-color: var(--line-dotted);
      }
      .tiptap-shell:focus-within {
        border-color: var(--accent);
        box-shadow: 0 0 0 2px rgba(35, 131, 226, 0.12);
      }
      .tiptap-input {
        min-height: 220px;
        padding: 8px 12px;
        outline: none;
        line-height: 1.7;
        font-family: inherit;
        font-size: 0.9375rem;
        color: var(--text);
      }
      .tiptap-input > *:first-child {
        margin-top: 0;
      }
      .tiptap-input > *:last-child {
        margin-bottom: 0;
      }
      .tiptap-input p.is-editor-empty:first-child::before {
        content: attr(data-placeholder);
        color: var(--muted);
        pointer-events: none;
        float: left;
        height: 0;
      }
      .tiptap-input ul,
      .tiptap-input ol,
      .seamless-content-input ul,
      .seamless-content-input ol {
        margin: 0 0 0.95em;
        padding-left: 1.5em;
        list-style-position: outside;
      }
      .tiptap-input ul,
      .seamless-content-input ul {
        list-style-type: disc;
      }
      .tiptap-input ol,
      .seamless-content-input ol {
        list-style-type: decimal;
      }
      .tiptap-input li,
      .seamless-content-input li {
        margin: 0.15em 0;
      }
      .tiptap-input blockquote,
      .seamless-content-input blockquote {
        margin: 0 0 0.95em;
        border-left: 3px solid var(--line-dotted);
        padding-left: 0.9em;
        color: var(--text-secondary);
      }
      .tiptap-input code,
      .seamless-content-input code {
        background: var(--bg-subtle);
        border: 1px solid var(--line-light);
        border-radius: 4px;
        padding: 0.1em 0.35em;
        font-size: 0.9em;
        font-family: "SF Mono", SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", monospace;
      }
      .tiptap-input pre,
      .seamless-content-input pre {
        margin: 0 0 0.95em;
        padding: 12px 14px;
        background: #f5f5f3;
        border: 1px solid var(--line-light);
        border-radius: var(--radius-sm);
        overflow-x: auto;
      }
      .tiptap-input pre code,
      .seamless-content-input pre code {
        background: transparent;
        border: 0;
        border-radius: 0;
        padding: 0;
        font-size: 0.875rem;
        line-height: 1.6;
      }

      /* ── Seamless Editor (Notion-style) ── */
      .seamless-editor {
        display: grid;
        gap: 4px;
        margin-top: 0;
      }

      .seamless-title-row {
        display: flex;
        align-items: flex-start;
        gap: 8px;
      }

      .seamless-title-row .seamless-title-input {
        flex: 1;
        min-width: 0;
      }

      .seamless-title-actions {
        display: flex;
        align-items: center;
        gap: 4px;
        padding-top: 8px;
        flex-shrink: 0;
      }

      .seamless-icon-btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 28px;
        height: 28px;
        border-radius: var(--radius-sm);
        border: none;
        background: transparent;
        color: var(--muted);
        cursor: pointer;
        padding: 0;
        transition: background var(--transition), color var(--transition);
      }

      .seamless-icon-btn:hover:not(:disabled) {
        background: var(--bg-subtle);
        color: var(--text);
      }

      .seamless-icon-btn:disabled {
        opacity: 0.4;
        cursor: not-allowed;
      }

      .seamless-icon-btn-danger:hover:not(:disabled) {
        background: rgba(235, 87, 87, 0.08);
        color: var(--danger);
      }

      .seamless-title-input {
        border: none;
        border-radius: 0;
        box-shadow: none;
        background: transparent;
        padding: 4px 0;
        margin: 0;
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", "Hiragino Sans", "Hiragino Kaku Gothic ProN", "Noto Sans JP", sans-serif;
        font-size: 2.25rem;
        line-height: 1.2;
        letter-spacing: -0.03em;
        font-weight: 700;
        color: var(--text);
      }

      .seamless-title-input:focus {
        border: none;
        box-shadow: none;
      }

      .seamless-title-input::placeholder {
        color: var(--line-dotted);
      }

      .seamless-note-meta {
        display: grid;
        gap: 2px;
        color: var(--muted);
        font-size: 0.75rem;
        line-height: 1.4;
        margin-bottom: 2px;
      }

      .seamless-content-shell {
        border: none;
        border-radius: 0;
        box-shadow: none;
        background: transparent;
      }

      .seamless-content-shell:hover,
      .seamless-content-shell:focus-within {
        border: none;
        box-shadow: none;
      }

      .seamless-content-input {
        min-height: 120px;
        padding: 8px 0 0;
        line-height: 1.8;
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", "Hiragino Sans", "Hiragino Kaku Gothic ProN", "Noto Sans JP", sans-serif;
        font-size: 1rem;
        color: var(--text);
      }

      .seamless-content-input p.is-editor-empty:first-child::before {
        color: var(--line-dotted);
      }

      .seamless-content-input p {
        margin: 0 0 0.95em;
      }

      .seamless-content-input > *:last-child {
        margin-bottom: 0;
      }

      /* ── Utilities ── */
      .muted { color: var(--muted); }
      .stack { display: grid; gap: 16px; }
      .stack-sm { display: grid; gap: 12px; }
      .text-sm { font-size: 0.875rem; }
      .text-xs { font-size: 0.8rem; }

      .link-accent {
        color: var(--accent);
        font-weight: 500;
        text-decoration: underline;
        text-decoration-color: rgba(35, 131, 226, 0.3);
        text-underline-offset: 2px;
        transition: text-decoration-color var(--transition);
      }
      .link-accent:hover {
        text-decoration-color: var(--accent);
      }

      .divider {
        border: none;
        border-top: 1px solid var(--line);
        margin: 0;
      }

      /* ── PostCard ── */
      .post-card {
        display: block;
        text-decoration: none;
        color: inherit;
        padding: 16px 8px;
        border-radius: var(--radius);
        transition: background var(--transition);
      }
      .post-card:hover {
        background: var(--bg-subtle);
      }
      .post-card-title {
        font-size: 1rem;
        font-weight: 600;
        margin: 0 0 4px;
        transition: color var(--transition);
        line-height: 1.4;
        letter-spacing: -0.01em;
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
      }
      .post-card-excerpt {
        color: var(--muted);
        font-size: 0.875rem;
        line-height: 1.5;
        margin: 0 0 8px;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
      }
      .post-card-footer {
        display: flex;
        align-items: center;
        gap: 8px;
      }
      .post-card-date,
      .post-card-reading {
        font-size: 0.75rem;
        color: var(--muted);
      }
      .post-card-date-updated {
        opacity: 0.8;
      }
      .post-card-dot {
        width: 3px;
        height: 3px;
        border-radius: 50%;
        background: var(--muted);
        opacity: 0.5;
        flex-shrink: 0;
      }

      .post-list {
        display: flex;
        flex-direction: column;
      }

      /* ── EmptyState ── */
      .empty-state {
        text-align: center;
        padding: 64px 24px;
        color: var(--muted);
      }
      .empty-state-icon {
        font-size: 3rem;
        margin-bottom: 16px;
        opacity: 0.3;
      }
      .empty-state-title {
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
        font-size: 1.125rem;
        font-weight: 600;
        color: var(--text);
        margin: 0 0 6px;
      }
      .empty-state-desc {
        margin: 0 0 20px;
        font-size: 0.875rem;
      }

      /* ── Status Message ── */
      .status-message {
        font-size: 0.8125rem;
        color: var(--muted);
        min-height: 1.4em;
      }
      .status-message.status-success {
        color: var(--success);
      }
      .status-message.status-error {
        color: var(--danger);
      }

      .btn-row {
        display: flex;
        gap: 8px;
        align-items: center;
      }

      /* ── Section header ── */
      .section-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 20px;
      }
      .section-title {
        font-size: 1rem;
        font-weight: 700;
        color: var(--text);
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
        letter-spacing: -0.01em;
        margin: 0;
      }
      .section-count {
        font-size: 0.75rem;
        color: var(--muted);
        background: var(--bg-subtle);
        padding: 2px 8px;
        border-radius: 10px;
        font-weight: 500;
      }

      /* ── Auth page layout ── */
      .auth-page {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 24px;
        background: var(--bg);
      }

      .auth-card {
        width: 100%;
        max-width: 400px;
      }

      .auth-brand {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        font-weight: 600;
        font-size: 0.875rem;
        letter-spacing: -0.01em;
        color: var(--text);
        margin-bottom: 32px;
        transition: color var(--transition);
      }
      .auth-brand:hover { color: var(--accent); }

      .auth-heading {
        font-size: 1.375rem;
        text-align: center;
        margin: 0 0 4px;
      }

      .auth-sub {
        text-align: center;
        color: var(--muted);
        font-size: 0.875rem;
        margin: 0 0 24px;
      }

      .auth-submit {
        width: 100%;
        padding: 10px;
        font-size: 0.875rem;
      }

      .auth-footer {
        text-align: center;
        margin-top: 24px;
        font-size: 0.8125rem;
        color: var(--muted);
      }

      .auth-status {
        text-align: center;
        font-size: 0.8125rem;
        color: var(--muted);
        min-height: 1.4em;
        margin-top: 12px;
      }
      .auth-status:empty { display: none; }

      /* ── Hero ── */
      .hero {
        background: var(--bg-subtle);
        border: 1px solid var(--line);
        border-radius: var(--radius-lg);
        padding: 40px 32px;
        margin-bottom: 32px;
        text-align: center;
      }
      .hero h1 {
        font-size: 1.75rem;
        margin: 0 0 8px;
      }
      .hero-desc {
        color: var(--muted);
        font-size: 0.9375rem;
        margin: 0 0 20px;
        max-width: 460px;
        margin-left: auto;
        margin-right: auto;
      }

      /* ── Page header ── */
      .page-header {
        margin-bottom: 24px;
      }
      .page-header h1 {
        margin-bottom: 4px;
      }

      /* ── Responsive ── */
      @media (max-width: 860px) {
        .app-shell {
          grid-template-columns: 1fr;
        }
        .sidebar {
          position: fixed;
          top: 0;
          left: 0;
          width: 260px;
          height: 100vh;
          z-index: 40;
          transform: translateX(-100%);
          box-shadow: none;
        }
        .sidebar.sidebar-open {
          transform: translateX(0);
          box-shadow: var(--shadow-lg);
        }
        .sidebar-overlay {
          display: none;
          position: fixed;
          inset: 0;
          background: rgba(0, 0, 0, 0.2);
          z-index: 39;
        }
        .sidebar-overlay.sidebar-open {
          display: block;
        }
        .sidebar-toggle {
          display: flex;
        }
      }

      @media (max-width: 640px) {
        .wrap { padding: 56px 16px 36px; }
        h1 { font-size: 1.5rem; }
        .card { padding: 18px; }
        .hero { padding: 28px 20px; margin-bottom: 24px; }
        .hero h1 { font-size: 1.5rem; }
        .section-header { flex-wrap: wrap; gap: 8px; }
        .seamless-title-input { font-size: 1.75rem; }
      }

    </style>
  </head>
  <body>
    {authPage ? (
      <div class="auth-page">
        <div class="auth-card">
          <a class="auth-brand" href="/">
            <span class="brand-icon">V</span>
            Vessel
          </a>
          <slot />
        </div>
      </div>
    ) : (
      <>
        <button type="button" class="sidebar-toggle" id="sidebar-toggle" aria-label="Toggle sidebar">
          <svg viewBox="0 0 20 20" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round">
            <path d="M3 5h14M3 10h14M3 15h14" />
          </svg>
        </button>

        <div class="sidebar-overlay" id="sidebar-overlay"></div>
        <div class="app-shell">
          <aside class="sidebar" id="sidebar" aria-label="Sidebar" transition:name="sidebar" transition:persist>
            <div class="sidebar-inner" transition:persist>
              <div class="sidebar-brand">
                <a class="brand" href="/">
                  <span class="brand-icon">V</span>
                  <span>Vessel</span>
                </a>
              </div>
              {user && sidebarTree ? (
                <SidebarTree
                  folders={sidebarTree.folders}
                  rootNotes={sidebarTree.rootNotes}
                  currentPath={currentPath}
                  client:load
                />
              ) : (
                <p class="sidebar-login">
                  <a href="/login">Sign in</a> to manage folders.
                </p>
              )}
            </div>
            <div class="sidebar-bottom">
              <a href={userNavHref} class={`sidebar-account-link ${isUserNavActive ? 'active' : ''}`}>{userNavLabel}</a>
            </div>
          </aside>
          <main class="wrap">
            <slot />
          </main>
        </div>

        <script>
          function initSidebar() {
            const toggle = document.getElementById('sidebar-toggle');
            const sidebar = document.getElementById('sidebar');
            const overlay = document.getElementById('sidebar-overlay');
            if (!toggle || !sidebar || !overlay) return;

            const open = () => {
              sidebar.classList.add('sidebar-open');
              overlay.classList.add('sidebar-open');
            };
            const close = () => {
              sidebar.classList.remove('sidebar-open');
              overlay.classList.remove('sidebar-open');
            };

            toggle.addEventListener('click', () => {
              sidebar.classList.contains('sidebar-open') ? close() : open();
            });
            overlay.addEventListener('click', close);
          }
          initSidebar();
          document.addEventListener('astro:page-load', initSidebar);
        </script>
      </>
    )}
  </body>
</html>
